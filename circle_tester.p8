pico-8 cartridge // http://www.pico-8.com
version 38
__lua__
function _init()
	x = 65
	y = 78
	r = 0
	radius2 = 0
	a = 0

end

function _update60()
	if (btn(1)) then
		x = x - cos(a) 
		y = y + sin(a)
		a += 0.01
	end
	if (btn(0)) then
		x = x + cos(a)
		y = y - sin(a)
		a -= 0.01
	end
	if (a>360) a = 0
end

function _draw()
	cls()
	print('x '..x, 0, 0, 7)
	print('y '..y, 0, 6, 7)
	print('radius2 '..radius2, 0, 12, 7)
	print('r '..r, 0, 18, 7)
	print('cos(r) '..cos(r), 0, 24, 7)
	print('sin(r) '..sin(r), 0, 30, 7)
	
	pset(x, y, 7)

	pset(64, 64, 12)
end

